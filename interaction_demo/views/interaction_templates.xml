<odoo>
    <template id="public_widget_page" name="Public Widget Page">
        <t t-call="website.layout">
            <div class="oe_structure">
                <div class="container o_public_widget_page">
                    <h1>Public Widget Example</h1>
                    <div class="row">
                        <div class="o_public_widget col-3 mb8" t-foreach="[1,2,3,4]" t-as="index">
                            <img t-attf-src="/interaction_demo/static/img/{{index}}.jpeg" class="o_widget_image image-zoom img-fluid img-thumbnail rounded mx-auto d-flex mb8" alt="Product Image"/>
                            <span class="fa fa-heart o_wishlist_btn"></span>
                            <div class="o_widget_content">
                                <input type="text" class="o_quantity form-control mb8" placeholder="Enter Quantity"/>
                                <button class="o_add_cart_btn">
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="d-block o_sidebar_cart mb8">
                        <h2>Cart</h2>
                        <div class="o_cart_details">
                            There are no items in the cart.
                        </div>
                        <button class="btn btn-primary mt-3">
                            Checkout
                        </button>
                    </div>
                    <div class="d-block o_sidebar_wishlist mb8">
                        <h2>Wishlist</h2>
                        <div class="o_wishlist_no_items">
                            There are no items in Wishlist.
                        </div>
                        <ul class="list-group d-none o_wishlist_items"></ul>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="interaction_page" name="Interaction Page">
        <t t-call="website.layout">
            <div class="oe_structure">
                <div class="container o_interaction_page">
                    <h1>Interaction Example</h1>
                    <div class="row">
                        <div class="o_interaction col-3 mb8" t-foreach="[1,2,3,4]" t-as="index">
                            <img t-attf-src="/interaction_demo/static/img/{{index}}.jpeg" class="o_widget_image image-zoom img-fluid img-thumbnail rounded mx-auto d-flex mb8" alt="Product Image"/>
                            <span class="fa fa-heart o_wishlist_btn"></span>
                            <div class="o_widget_content">
                                <input type="text" class="o_quantity form-control mb8" placeholder="Enter Quantity"/>
                                <button class="o_add_cart_btn">
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="d-block o_sidebar_cart mb8">
                        <h2>Cart</h2>
                        <div class="o_cart_details">
                            There are no items in the cart.
                        </div>
                        <button class="btn btn-primary mt-3">
                            Checkout
                        </button>
                    </div>
                    <div class="d-block o_sidebar_wishlist mb8">
                        <h2>Wishlist</h2>
                        <div class="o_wishlist_no_items">
                            There are no items in Wishlist.
                        </div>
                        <ul class="list-group d-none o_wishlist_items"></ul>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
